#!/bin/sh

# 커밋 메시지 파일 경로
COMMIT_MSG_FILE=$1

# 커밋 메시지 내용 읽기
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# 정규표현식: [태그] 커밋 내용
REGEX="^\[(Feat|Fix|Hotfix|Docs|Test|Chore|Del|Refactor|Merge|Add|Rename|Move)\] [^\.]+$"

# 커밋 메시지 검증
if ! echo "$COMMIT_MSG" | grep -Eq "$REGEX"; then
  echo "❌ 커밋 메시지가 올바르지 않습니다."
  echo ""
  echo "커밋 메시지 규칙:"
  echo "  [태그] 커밋 내용"
  echo ""
  echo "태그 목록:"
  echo "  [Feat], [Fix], [Hotfix], [Docs], [Test], [Chore], [Del], [Refactor], [Merge], [Add], [Rename], [Move], [Style]"
  echo ""
  echo "예: [Feat] 회원 가입 기능 구현"
  echo ""
  exit 1
fi

echo "✅ 커밋 메시지가 규칙에 맞습니다."
